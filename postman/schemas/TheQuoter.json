{
    "openapi": "3.1.0",
    "info": {
        "description": "New app for viewing and storing quotes of famous (and infamous) people",
        "version": "1.0.2",
        "title": "TheQuoter",
        "license": {
            "name": "MIT"
        }
    },
    "tags": [
        {
            "name": "users",
            "description": "User related things (login and register)"
        },
        {
            "name": "people",
            "description": "Operations about originators of quotes"
        },
        {
            "name": "classes",
            "description": "Operations about classes"
        },
        {
            "name": "quotes",
            "description": "Working with the main component of this project"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Register",
                "description": "Allows anyone to register",
                "operationId": "register",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRegisterBody"
                            }
                        }
                    },
                    "description": "Created user object",
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Logs user into the system",
                "description": "Log in",
                "operationId": "login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLoginBody"
                            }
                        }
                    },
                    "description": "Created user object",
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/classes": {
            "post": {
                "tags": [
                    "classes"
                ],
                "summary": "Lists all classes",
                "description": "Classes Query",
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/Token "
                            }
                        }
                    },
                    "description": "Queried registered classes",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content":{
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Class"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "servers": [
        {
            "url": "localhost:3000"
        }
    ],
    "components": {
        "schemas": {
            "UserRegisterBody": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "UserLoginBody": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "Token": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "Person": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    }
                }
            },
            "Class": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Quote": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "context": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "note": {
                        "type": "string"
                    },
                    "originator": {
                        "type": "object",
                        "properties": {
                            "_id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            }
                        }
                    },
                    "class": {
                        "type": "object",
                        "properties": {
                            "_id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}