{
    "openapi": "3.1.0",
    "info": {
        "description": "New app for viewing and storing quotes of famous (and infamous) people",
        "version": "1.0.2",
        "title": "TheQuoter",
        "license": {
            "name": "MIT"
        }
    },
    "tags": [
        {
            "name": "users",
            "description": "User related things (login and register)"
        },
        {
            "name": "people",
            "description": "Operations about originators of quotes"
        },
        {
            "name": "classes",
            "description": "Operations about classes"
        },
        {
            "name": "quotes",
            "description": "Working with the main component of this project"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Register",
                "description": "Allows anyone to register",
                "operationId": "register",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRegisterBody"
                            }
                        }
                    },
                    "description": "Created user object",
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Logs user into the system",
                "description": "Log in",
                "operationId": "login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLoginBody"
                            }
                        }
                    },
                    "description": "Created user object",
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/classes": {
            "get":{
                "tags": [
                    "classes"
                ],
                "summary": "Retrieve classes by key",
                "description": "Get class",
                "operationId": "getClass",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "query": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "$ref": "#/components/schemas/Class"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["classes"],
                "summary": "Create a class",
                "description": "Create a class (ADMIN)",
                "operationId": "pushClass",
                "requestBody":{
                    "content": {
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/CreateClassBody"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Success",
                        "content":{
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Class"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/people": {
            "get": {
                "tags": ["people"],
                "summary": "Query people",
                "description": "Get people by type or name",
                "operationId": "getPeople",
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema":{
                                "type": "object",
                                "$ref": "#/components/schemas/Token",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Person"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                // TODO: Add the people creation request
            }
        },
        "/quotes": {
            "get": {
                // TODO: Add the people creation request
            },
            "post": {
                // TODO: Add the people creation request
            }
        }
    },
    "servers": [
        {
            "url": "localhost:3000"
        }
    ],
    "components": {
        "schemas": {
            "CreateClassBody": {
                "type": "object",
                "properties": {
                    "$ref": "#/components/schemas/Token",
                    "name": "string"
                }  
            },
            "UserRegisterBody": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "required": true
                    },
                    "email": {
                        "type": "string",
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "required": true
                    }
                }
            },
            "UserLoginBody": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "required": true
                    }
                }
            },
            "Token": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "format": "password",
                        "required": true
                    }
                }
            },
            "Person": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    }
                }
            },
            "Class": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Quote": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "context": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "note": {
                        "type": "string"
                    },
                    "originator": {
                        "type": "object",
                        "properties": {
                            "_id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            }
                        }
                    },
                    "class": {
                        "type": "object",
                        "properties": {
                            "_id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}