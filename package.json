{
  "name": "thequoter",
  "version": "0.1.2",
  "description": "Backend for the Quoter project",
  "main": "./dist/server.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon -w ./src ./src/server.ts",
    "build": "tsc -p ./tsconfig.json",
    "start": "npm run build && node ./dist/server.js",
    "format": "prettier --write . --ignore-unknown",
    "lint": "eslint --ext .ts ./src",
    "docker": "tsc -p ./tsconfig.json && docker build . -f Dockerfile . -t maximmaxims/thequoter",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaximMaximS/TheQuoter.git"
  },
  "author": "MaximMaximS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MaximMaximS/TheQuoter/issues"
  },
  "homepage": "https://github.com/MaximMaximS/TheQuoter#readme",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-slow-down": "^1.3.2",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose-id-validator": "^0.6.3",
    "@types/mongoose-unique-validator": "^1.0.6",
    "@types/node": "^17.0.42",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "*.ts": "npm run lint",
    "**/*": "npm run format"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-slow-down": "^1.4.0",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "middleware-async": "^1.3.2",
    "mongoose": "^6.3.8",
    "mongoose-id-validator": "^0.6.0",
    "mongoose-unique-validator": "^3.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
